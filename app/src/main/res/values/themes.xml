<resources>
    <!-- Base application theme. -->
    <style name="Theme.ShabaRetailer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">0dp</item>
        <item name="android:padding">12dp</item>
        <item name="fontFamily">@font/work_sans_regular</item>
    </style>

    <style name="WindowAnimationUpDown" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_in_upwards</item>
        <item name="android:windowExitAnimation">@anim/slide_out_downwards</item>
    </style>
</resources>