<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="sequential">
    <fade android:duration="1000">
        <targets>
            <target android:targetId="@+id/bg" />
        </targets>
    </fade>
    <fade android:duration="1000" android:startDelay="500">
        <targets>
            <target android:targetId="@+id/icon" />
        </targets>
    </fade>
    <fade android:duration="3000">
        <targets>
            <target android:targetId="@+id/welcome" />
        </targets>
    </fade>
    <fade android:duration="1000" android:startDelay="500">
        <targets>
            <target android:targetId="@+id/skip" />
            <target android:targetId="@+id/next" />
        </targets>
    </fade>
</transitionSet>